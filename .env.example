# Copy this file to .env and customize as needed

# Database Configuration
POSTGRES_URL=postgres://postgres:postgres@postgres:5432/northwind
POSTGRES_DB=northwind
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# GraphQL Configuration
HASURA_URL=http://hasura:8080/v1/graphql
HASURA_ADMIN_SECRET=hasura-admin-secret

# Redis Configuration
REDIS_URL=redis://redis:6379

# Prometheus Configuration
PROMETHEUS_URL=http://prometheus:9090

# Application Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Performance Test Settings
MAX_CONCURRENT_REQUESTS=100
TEST_DURATION_SECONDS=300
CACHE_TTL_SECONDS=300

# Data Generation Settings
BATCH_SIZE=10000
MAX_RETRIES=3

# Target Data Volumes (adjust as needed)
TARGET_CUSTOMERS=100000
TARGET_ORDERS=5000000
TARGET_ORDER_DETAILS=5000000

# Output Directories
REPORT_OUTPUT_DIR=/app/reports
LOG_OUTPUT_DIR=/app/logs

# Monitoring Settings
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Security (Change for production!)
SECRET_KEY=your-secret-key-here
JWT_SECRET=your-jwt-secret-here

# Performance Thresholds
SLOW_QUERY_THRESHOLD_MS=1000
HIGH_CPU_THRESHOLD_PERCENT=80
HIGH_MEMORY_THRESHOLD_PERCENT=85
LOW_CACHE_HIT_THRESHOLD_PERCENT=70

# Docker Resource Limits
POSTGRES_MEMORY_LIMIT=2g
REDIS_MEMORY_LIMIT=512m
HASURA_MEMORY_LIMIT=1g
PERFORMANCE_MONITOR_MEMORY_LIMIT=1g
